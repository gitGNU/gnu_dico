/* A sample configuration for dictd */

capability (mime,xversion);
timing yes;
access-log-file "<BUILDDIR>/tests/access_log";
access-log-format "%h %l %u %t \"%r\" %>s %b \"\" \"%C\"";

module-load-path "<BUILDDIR>/modules/outline";

load-module outline {
	command "outline";
}

database {
	name "devdict";
	handler "outline <SRCDIR>/tests/devils.out";
}

alias d DEFINE;
alias da d "*";
alias df d "!";
alias m MATCH;
alias mas m "*";
alias mfs m "!";
alias ma mas ".";
alias mf mfs ".";
alias s STATUS;
alias h HELP;
alias q QUIT;

help-text <<- EOT
	+
  The following commands are unofficial server extensions provided for
  debugging purposes.  They may disappear or change any time without
  notice.

  d database word                 -- DEFINE database word
  da word                         -- DEFINE * word
  df word                         -- DEFINE ! word
  ma word                         -- MATCH * . word
  mf word                         -- MATCH ! . word
  mas strategy word               -- MATCH * strategy word
  mfs strategy word               -- MATCH ! strategy word
  m database strategy word        -- MATCH database strategy word
  s                               -- STATUS
  h                               -- HELP
  q                               -- QUIT
EOT;

user nobody;
listen (localhost:dict, "/tmp/dict.sock");
max-children 18;
#inactivity-timeout 5;

log-tag "Dico dictd";
pidfile <BUILDDIR>/tests/dictd.pid;

server-info <<EOT
This is a test Dico server.
EOT;




